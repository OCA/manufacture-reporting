
<odoo>
    <data>
        <record id="res_config_fixed_settings_view_form" model="ir.ui.view">
            <field name="name">res.config.fixed.settings.view.form</field>
            <field name="model">res.config.settings</field>
            <field name="priority" eval="36"/>
            <field name="inherit_id" ref="base.res_config_settings_view_form" />
            <field name="arch" type="xml">
                <xpath expr="//div[@data-key='mrp']" position="inside">
                    <h2>Bill of Materials</h2>
                    <div class="row mt16 o_settings_container" id="mrp_fixed_qty">
                        <div class="col-md-6 col-xs-12 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="module_mrp_bom_fixed_quantity"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="module_mrp_bom_fixed_quantity"/>
                                <div class="text-muted">
                                    Set fixed quantity for a BOM record
                                </div>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
